<div>
    {{#with person}}
    <div>
        <h1>{{name}}</h1>
    </div>

    <div>
        <p> age - {{age}}</p>
        <p> gender - {{gender}}</p>
    </div>
    {{/with}}
</div>

<div>
    {{#with person}}
     <div>
        <p> street - {{address.street}}</p>
        <p> city - {{address.city}}</p>
        <p> state - {{address.state}}</p>
        <p> zip - {{address.zip}}</p>
        <p> country - {{address.country}}</p>
    </div>
    {{/with}}
</div>

<div>
{{#each education}}
<h2>Education</h2>
<div>
<p> degree - {{degree}}</p>
<p> major - {{major}}</p>
<p> university - {{university}} ({{graduationYear}})</p>
{{/each}}

</div>

